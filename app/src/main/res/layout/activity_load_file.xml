<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vn.com.blues.learningapp.LoadFileActivity">

    <TextView android:text="Welcome!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_title"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_numOfQuestion"
        android:textSize="20dp"
        android:text="0"
        android:layout_below="@+id/file_title"
        android:layout_toEndOf="@+id/label_nOQ"
        android:layout_marginLeft="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numOfQuestion"
        android:id="@+id/label_nOQ"
        android:textSize="20sp"
        android:layout_below="@+id/file_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/process"
        android:id="@+id/label_process"
        android:textSize="20sp"
        android:layout_below="@+id/label_nOQ"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s go"
        android:id="@+id/button_go"
        android:onClick="toGo"
        android:layout_below="@+id/label_process"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button_turnBack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_turnBack"
        android:onClick="toReturn"
        android:layout_below="@+id/label_process"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_startQuestion"
        android:textSize="20sp"
        android:inputType="number"
        android:paddingLeft="2sp"
        android:paddingTop="0dp"
        android:paddingRight="2sp"
        android:paddingBottom="8sp"
        android:width="50sp"
        android:singleLine="true"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:layout_below="@+id/label_nOQ"
        android:layout_toEndOf="@+id/label_process" />

</RelativeLayout>
